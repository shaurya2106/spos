#include <iostream>
#include <thread>
#include <mutex>
#include <shared_mutex>
#include <condition_variable>
#include <queue>
#include <chrono>
using namespace std;

/*---------------------------------------------------------
  2. PRODUCER-CONSUMER PROBLEM
----------------------------------------------------------*/
const int BUFFER_SIZE = 5;
queue<int> buffer;
mutex mtx;
condition_variable not_full, not_empty;

void producer() {
    int item = 0;
    for (int i = 0; i < 10; i++) {
        unique_lock<mutex> lock(mtx);

        // wait if buffer is full
        not_full.wait(lock, [] { return buffer.size() < BUFFER_SIZE; });

        item++;
        buffer.push(item);
        cout << "[Producer] produced item: " << item << endl;

        lock.unlock();
        not_empty.notify_one(); // notify consumer
        this_thread::sleep_for(chrono::milliseconds(400));
    }
}

void consumer() {
    for (int i = 0; i < 10; i++) {
        unique_lock<mutex> lock(mtx);

        // wait if buffer is empty
        not_empty.wait(lock, [] { return !buffer.empty(); });

        int item = buffer.front();
        buffer.pop();
        cout << "[Consumer] consumed item: " << item << endl;

        lock.unlock();
        not_full.notify_one(); // notify producer
        this_thread::sleep_for(chrono::milliseconds(500));
    }
}

void producerConsumerProblem() {
    cout << "\n=== PRODUCER-CONSUMER PROBLEM ===\n";
    thread prod(producer);
    thread cons(consumer);

    prod.join();
    cons.join();
    cout << "Producer-Consumer simulation complete!\n";
}


/*---------------------------------------------------------
  3. DINING PHILOSOPHER PROBLEM
----------------------------------------------------------*/
const int NUM_PHILOSOPHERS = 5;
mutex forks[NUM_PHILOSOPHERS];

void philosopher(int id) {
    int left = id;
    int right = (id + 1) % NUM_PHILOSOPHERS;

    for (int i = 0; i < 1; i++) {
        cout << "Philosopher " << id << " is thinking\n";
        this_thread::sleep_for(chrono::milliseconds(500));

        cout << "Philosopher " << id << " is hungry\n";
        lock(forks[left], forks[right]); // pick both forks

        lock_guard<mutex> left_fork(forks[left], adopt_lock);
        lock_guard<mutex> right_fork(forks[right], adopt_lock);

        cout << "Philosopher " << id << " started eating\n";
        this_thread::sleep_for(chrono::milliseconds(600));
        cout << "Philosopher " << id << " finished eating\n";
    }
}

void diningPhilosopherProblem() {
    cout << "\n=== DINING PHILOSOPHER PROBLEM ===\n";
    thread philosophers[NUM_PHILOSOPHERS];

    for (int i = 0; i < NUM_PHILOSOPHERS; i++)
        philosophers[i] = thread(philosopher, i);

    for (int i = 0; i < NUM_PHILOSOPHERS; i++)
        philosophers[i].join();

    cout << "Dining Philosopher simulation complete!\n";
}



int main() {
    cout << "Classical Synchronization Problems Simulation\n";
    cout << "--------------------------------------------\n";

    //readerWriterProblem();
    producerConsumerProblem();
    diningPhilosopherProblem();

    cout << "\nAll problems simulated successfully!\n";
    return 0;
}
