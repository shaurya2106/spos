//PC And RR command:g++ file_name.cpp -o file_name -pthread
//o/p command: ./file_name

#include <iostream>
#include <thread>
#include <mutex>
#include <shared_mutex>
#include <condition_variable>
#include <queue>
#include <chrono>
using namespace std;

/*---------------------------------------------------------
  1. READER-WRITER PROBLEM command:g++ -std=c++17 -o file_name file_name.cpp -pthread, o/p command:./file_name
----------------------------------------------------------*/

shared_mutex rw_mutex; // allows multiple readers, single writer
int data_value = 0;

void reader() {
    for (int i = 0; i < 3; i++) {
        shared_lock<shared_mutex> lock(rw_mutex); // shared access
        cout << "[Reader] reads data: " << data_value << endl;
        lock.unlock();
        this_thread::sleep_for(chrono::milliseconds(400));
    }
}

void writer() {
    for (int i = 0; i < 3; i++) {
        unique_lock<shared_mutex> lock(rw_mutex); // exclusive access
        data_value += 10;
        cout << "[Writer] updates data to: " << data_value << endl;
        lock.unlock();
        this_thread::sleep_for(chrono::milliseconds(500));
    }
}

void readerWriterProblem() {
    cout << "\n=== READER-WRITER PROBLEM ===\n";
    thread read(reader);
    thread write(writer);

    read.join();
    write.join();
    cout << "Reader-Writer simulation complete!\n";
}

/*---------------------------------------------------------
  2. PRODUCER-CONSUMER PROBLEM
----------------------------------------------------------*/
const int BUFFER_SIZE = 5;
queue<int> buffer;
mutex mtx;
condition_variable not_full, not_empty;

void producer() {
    int item = 0;
    for (int i = 0; i < 10; i++) {
        unique_lock<mutex> lock(mtx);

        // wait if buffer is full
        not_full.wait(lock, [] { return buffer.size() < BUFFER_SIZE; });

        item++;
        buffer.push(item);
        cout << "[Producer] produced item: " << item << endl;

        lock.unlock();
        not_empty.notify_one(); // notify consumer
        this_thread::sleep_for(chrono::milliseconds(400));
    }
}

void consumer() {
    for (int i = 0; i < 10; i++) {
        unique_lock<mutex> lock(mtx);

        // wait if buffer is empty
        not_empty.wait(lock, [] { return !buffer.empty(); });

        int item = buffer.front();
        buffer.pop();
        cout << "[Consumer] consumed item: " << item << endl;

        lock.unlock();
        not_full.notify_one(); // notify producer
        this_thread::sleep_for(chrono::milliseconds(500));
    }
}

void producerConsumerProblem() {
    cout << "\n=== PRODUCER-CONSUMER PROBLEM ===\n";
    thread prod(producer);
    thread cons(consumer);

    prod.join();
    cons.join();
    cout << "Producer-Consumer simulation complete!\n";
}

int main() {
    cout << "Classical Synchronization Problems Simulation\n";
    cout << "--------------------------------------------\n";

    readerWriterProblem();
    producerConsumerProblem();
    //diningPhilosopherProblem();

    cout << "\nAll problems simulated successfully!\n";
    return 0;
}
